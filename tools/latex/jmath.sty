\newcommand{\vsseqi}[3]{\sseqi{#1}{\vec{#2}}{#3}}
\newcommand{\vseqi}[2][k]{\seqi[#1]{\vec{#2}}}
\newcommand{\vseq}[1]{\vseqi{#1}}
