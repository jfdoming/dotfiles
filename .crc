cap() {
    if [ -z "$1" ]; then
        echo Missing file \#1.
    elif [ -z "$2" ]; then
        echo Missing file \#2.
    else
        comm -12 <(cat $1 | sort) <(cat $2 | sort)
    fi
}
xcap() {
    if [ -z "$1" ]; then
        echo Missing file \#1.
    elif [ -z "$2" ]; then
        echo Missing file \#2.
    else
        comm -3 <(cat $1 | sort) <(cat $2 | sort)
    fi
}

